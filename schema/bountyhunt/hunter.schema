package bountyhunt;

import "bountyhunt/common.schema";

component HunterComponent {
    id = 430001;
    string name = 1;
    int32 kills = 2;
    int32 deaths = 3;
    int64 bounty = 4;
    int64 earnings = 5;
    string pubkey = 6;
    command bountyhunt.Empty add_bounty(AddBountyRequest);
    command bountyhunt.Empty increase_earnings(IncreaseEarningsRequest);
}


type AddBountyRequest {
    int64 amount = 1;
    BountyReason reason = 2;
}

type IncreaseEarningsRequest {
    int64 amount = 1;
}

enum BountyReason {
    PICKUP = 0;
    DONATION = 1;
    GAMEMODE = 2;
    OTHER = 3;
}


